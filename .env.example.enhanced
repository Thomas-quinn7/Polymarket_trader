# Polymarket Trading Bot - Enhanced Configuration
# Copy this file to .env and fill in your values

# ============================================
# API Configuration
# ============================================
POLYMARKET_PRIVATE_KEY=your_private_key_here
POLYMARKET_FUNDER_ADDRESS=your_funder_address_here

# ============================================
# Builder Configuration (Optional)
# Enable for verified status and 3000 req/day limit
# Set BUILDER_ENABLED=true and fill in builder credentials
BUILDER_ENABLED=false
BUILDER_API_KEY=
BUILDER_SECRET=
BUILDER_PASSPHRASE=

# ============================================
# Email Notifications (Optional)
ENABLE_EMAIL_ALERTS=true
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
ALERT_EMAIL_FROM=bot@yourdomain.com
ALERT_EMAIL_TO=your_email@gmail.com

# ============================================
# Discord Notifications (Optional)
ENABLE_DISCORD_ALERTS=true
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_URL
DISCORD_MENTION_USER=@your_username

# ============================================
# Paper Trading Settings
PAPER_TRADING_ENABLED=true
PAPER_TRADING_ONLY=true
FAKE_CURRENCY_BALANCE=10000.00

# ============================================
# Dashboard Configuration
DASHBOARD_ENABLED=true
DASHBOARD_PORT=8080
DASHBOARD_HOST=127.0.0.1

# ============================================
# Logging Configuration
LOG_LEVEL=INFO
LOG_TO_FILE=true

# ============================================
# Arbitrage Strategy Configuration
EXECUTE_BEFORE_CLOSE_SECONDS=2
MIN_PRICE_THRESHOLD=0.985
MAX_PRICE_THRESHOLD=1.00
MAX_POSITIONS=5
CAPITAL_SPLIT_PERCENT=0.2

# ============================================
# Market Categories
# Enable/disable specific market categories
ENABLE_CRYPTO_MARKETS=true
ENABLE_FED_MARKETS=true
ENABLE_REGULATORY_MARKETS=true
ENABLE_OTHER_MARKETS=true

# ============================================
# Category Priority (1=highest priority, 5=lowest priority)
# Lower number = higher priority
PRIORITY_CRYPTO=1
PRIORITY_FED=2
PRIORITY_REGULATORY=3
PRIORITY_OTHER=4

# ============================================
# Keyword Filters (comma-separated, optional)
# Include only markets matching these keywords
CRYPTO_KEYWORDS=bitcoin,ethereum,crypto,defi,web3
FED_KEYWORDS=federal,reserve,fed,interest rate,inflation,economy
REGULATORY_KEYWORDS=sec,regulation,compliance,government,fed chair,powell
OTHER_KEYWORDS=politics,election,sports,entertainment,celebrity,entertainment

# ============================================
# Exclude Filters (comma-separated, optional)
# Exclude markets containing these keywords
EXCLUDE_KEYWORDS=trump,biden,presidential,prediction,speculative,gambling,uncertain

# Exclude these specific market slugs
EXCLUDE_SLUGS=trump-biden-prediction,speculative-market-id1,uncertain-outcome

# ============================================
# Price Filters (optional)
# Filter by minimum market price (0-99 cents)
MIN_PRICE=0.01
MAX_PRICE=0.99

# ============================================
# Edge Filters (optional)
# Filter by minimum arbitrage edge percentage (0-100%)
MIN_EDGE=0.5
MAX_EDGE=5.0

# ============================================
# Time to Close Filters (optional)
# Filter by minimum seconds to market close (1-86400)
MIN_TIME_TO_CLOSE=60
MAX_TIME_TO_CLOSE=86400

# ============================================
# Scanning Behavior
# Scan interval in milliseconds (recommended: 500)
SCAN_INTERVAL_MS=500

# Maximum number of markets to track (optional, unlimited if not set)
MAX_MARKETS_TO_TRACK=1000

# Only scan new markets (ignore previously seen markets)
TRACK_NEW_MARKETS_ONLY=false

# Ignore previously seen markets (redundant if TRACK_NEW_MARKETS_ONLY=true)
IGNORE_SEEN_MARKETS=false

# ============================================
# Execution Settings
# Order type: FOK (Fill or Kill), IOC (Immediate or Cancel)
ORDER_TYPE=FOK

# Maximum slippage tolerance percentage (0-100)
SLIPPAGE_TOLERANCE_PERCENT=5.0

# Maximum retry attempts (0-10)
MAX_RETRIES=3

# Retry delay in milliseconds (100-5000)
RETRY_DELAY_MS=100

# ============================================
# Notes on Configuration
#
# Market Categories:
# - crypto: Bitcoin, Ethereum, DeFi, Web3, etc.
# - fed: Federal Reserve, interest rates, economy
# - regulation: SEC, regulations, compliance
# - other: Politics, elections, sports, entertainment
#
# Priority System:
# - 1 = Highest priority (scanned first)
# - 2-5 = Lower priority (scanned in order)
#
# Keyword Matching:
# - Keywords are case-insensitive partial matches
# - Separate multiple keywords with commas
# - Apply to include filters (CRYPTO_KEYWORDS, etc.)
# - Apply to exclude filters (EXCLUDE_KEYWORDS, EXCLUDE_SLUGS)
#
# Time to Close:
# - Measured in seconds from now
# - 60 = 1 minute, 3600 = 1 hour, 86400 = 1 day
#
# Recommended Settings for Beginners:
# - Enable all categories initially
# - Set conservative edge filters (MIN_EDGE=0.5, MAX_EDGE=2.0)
# - Enable TRACK_NEW_MARKETS_ONLY=true to avoid duplicates
# - Use time filters to focus on near-term markets
